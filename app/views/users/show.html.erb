<div class="row centered-profile">
  <div class="col-md-4">
    <%= image_tag("http://placehold.it/300x300") %>
  </div>
  <div class="col-md-8">
    <h2><%= full_name %></h2>
    <h3><%= @user.username %></h3>
    <div class="row">
      <div class="col-xs-2 public-link">
        <h6><%= link_to "Public Profile", request.url %></h6>
        <%#= request.url %>
      </div>
      <div class="col-xs-2 edit-link">
        <% if user_signed_in? %>
          <h6><%= link_to "Edit Account", edit_user_registration_path %></h6>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3 shared-count">
        <div class="stats">
          <h4>Articles</h4>
          <h4><%= @user.articles.count  %></h4>
        </div>
      </div>
      <div class="col-xs-3 favorite-count">
        <div class="stats">
          <h4>Favorites</h4>
          <%# IDEA: counter for favorites go here %>
          <h4>24</h4>
        </div>
      </div>
      <div class="col-xs-3 follower-count">
        <div class="stats">
          <h4>Followers</h4>
          <h4>2</h4>
        </div>
      </div>
      <div class="col-xs-3 following-count">
        <div class="stats">
          <h4>Following</h4>
          <h4>2389</h4>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="user-articles">
  <h1>Articles</h1>
  <div class="row">
    <%# IDEA: render articles partial %>
  </div>
</div>
